{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2020", "dom"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@entities/*": ["entities/*"],
      "@types/*": ["types/*"]
    },
    "types": ["reflect-metadata"]
  },
  "include": ["src/**/*"]
}